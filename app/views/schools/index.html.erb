<h1> Schools </h1>
<% if flash[:msg] %>
    <h3><%= flash[:msg] %></h3>
<% end %>

<% @schools.school_order.each do |school| %>
    <p><b><%= link_to "#{school.name}", school_items_path(school)  %> - <%= school.location %></b></p>
        <% school.items.each do |item| %>
            <ul>
            <li><%= item.name %> - $<%= item.total_cost %></li>
            
            </ul>
        <% end %>
<% end %>

<br>
</br>

<% if current_user.role == 1 %>
    <%= link_to "New School", new_school_path %>
<% end %>

<br>
</br>
<%= link_to "User Profile Page", user_path(current_user) %>
