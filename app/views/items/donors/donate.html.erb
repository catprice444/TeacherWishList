<h1> Donation Page </h1>

<h2> <%= @item.name %> </h2><br>

<h3> Available Money: $<%= current_user.donation_amount %></h3>
<h3> Total Cost: $<%= @item.total_cost %></h3>
<h3> Units Still Needed: <%= @item.amount_needed %></h3>

<%= form_tag donate_item_path do %>
    <% if @item.errors.any? %>
    <div id="error_explanation">
      <h2> Error: </h2>
      <ul>
        <% @item.errors.full_messages.each do |msg| %>
          <li> <%= msg %> </li>
        <% end %>
      </ul>
    </div>
  <% end %>

    <%= submit_tag "Donate" %>
<% end %>


