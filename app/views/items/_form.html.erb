<%= form_for([@item.school,@item]) do |f| %>
    <% if @item.errors.any? %>
    <div id="error_explanation">
      <h2>Error:</h2>
      <ul>
        <% @item.errors.full_messages.each do |message| %>
          <li><% message %></li>
        <% end %>
      </ul>
    </div>
    <% end %>

    <%= f.hidden_field :user_id, :value => current_user.id %>
    <%= f.hidden_field :school_id, :value => params[:school_id] %>

    <div class="field<%= 'field_with_errors' if @item.errors[:name].any? %>">
        <p> Item Name: </p>
        <%= f.text_field :name %><br>
    </div> 

    
    <div class="field<%= 'field_with_errors' if @item.errors[:cost].any? %>">
        <p> Cost Per Unit (round up): </p>
        <%= f.number_field :cost %><br>
    </div>

    
    <div class="field<%= 'field_with_errors' if @item.errors[:amount_needed].any? %>">
        <p> Amount Needed: </p>
        <%= f.number_field :amount_needed %><br>
    </div>

    </br>
    <%= f.submit %>
<% end %>